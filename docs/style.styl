// Import

@import url('https://fonts.googleapis.com/css?family=Karla:400,700')




// Variables

grid-size = 0.4rem

color-dark = #26262F
color-mid = #81818B
color-light = #FFFFFF




// Set up

*
  margin 0
  padding 0
  text-decoration none
  outline none
  border none
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

html
  height 100%
  font-size 62.5%

body
  height 100%
  font-family 'Karla', sans-serif
  font-weight 400
  color color-dark

img
  display block

a
  color inherit
  cursor pointer
  display block




// Text

h1
  font-size grid-size*14
  line-height grid-size*17.5
  margin grid-size*10 0 grid-size*3 0

h2
  font-size grid-size*6
  line-height grid-size*7.5

p, a, li
  font-size grid-size*4
  line-height grid-size*6

p
  margin grid-size*3 0 0 0

a
  font-weight 700

li
  padding-left grid-size*5
  margin grid-size*3 0 0 0
  list-style none
  background-image url("./assets/bullet.png")
  background-repeat no-repeat
  background-position left center
  background-size grid-size*2 grid-size*3




// Action

a.button
  color color-light
  background color-dark
  padding grid-size*4 grid-size*6
  margin grid-size*10 0 grid-size*5 0

  &:hover
    background darken(color-dark, 8)

a.link
  display inline-block
  color inherit

  &:hover
    color darken(color-dark, 8)




// Image

img.logo
  height grid-size*8

img.screenshot
  width 100%



// Structure

body
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center

  main
    width grid-size*89
    margin-right grid-size*28
    display flex
    flex-direction column
    align-items flex-start

  aside
    width grid-size*120

p.credit
  color color-mid




// Responsive

@media screen and (max-width: 1172px), (max-height: 890px)

  html
    font-size 56%

    main
      margin-right grid-size*18


@media screen and (max-width: 941px), (max-height: 725px)

  body
    height auto
    flex-direction column
    justify-content flex-start

    main,
    aside
      width 480px

    main
      margin grid-size*16 0 grid-size*6 0

    aside
      margin grid-size*6 0 grid-size*16 0

@media screen and (max-width: 560px)

  body
    main,
    aside
      width 100%
      padding 0 grid-size*10




// End
