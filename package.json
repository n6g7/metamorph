{
  "name": "stylay",
  "version": "0.1.0",
  "description": "Compile your Stylus with ease",
  "main": "app/bundle.main.js",
  "author": "Nathan G <n6g7@gnab.fr>",
  "scripts": {
    "pretest": "eslint --ext js,jsx src test",
    "test": "mocha --compilers js:babel-core/register --require test/helper.js --recursive",
    "start": "electron .",
    "build": "webpack && rm -r dist || build -mwl",
    "dev": "NODE_ENV=dev electron ."
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/n6g7/stylay.git"
  },
  "bugs": {
    "url": "https://github.com/n6g7/stylay/issues"
  },
  "homepage": "https://github.com/n6g7/stylay#readme",
  "dependencies": {
    "immutable": "^3.8.1",
    "jade": "^1.11.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "redux-logger": "^2.6.1",
    "stylus": "^0.54.5"
  },
  "devDependencies": {
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.5.0",
    "cheerio": "^0.20.0",
    "css-loader": "^0.23.1",
    "electron-builder": "^5.7.0",
    "electron-prebuilt": "^1.2.0",
    "enzyme": "^2.3.0",
    "eslint": "^2.13.1",
    "eslint-plugin-react": "^5.2.2",
    "file-loader": "^0.9.0",
    "ignore-styles": "^4.0.0",
    "img-loader": "^1.2.2",
    "mocha": "^2.5.3",
    "react-addons-test-utils": "^15.1.0",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.1.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "mocha": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "globals": {
      "Promise": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ]
  },
  "build": {
    "appId": "fr.gnab.stylay",
    "app-category-type": "public.app-category.developer-tools"
  }
}
